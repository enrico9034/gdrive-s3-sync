# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# S3 Custom Endpoint (optional - for MinIO, Wasabi, or other S3-compatible storage)
# Leave empty or comment out for standard AWS S3
# Examples:
#   MinIO: http://localhost:9000
#   Wasabi: https://s3.wasabisys.com
#   DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com
S3_ENDPOINT_URL=

# Google Drive Configuration
GDRIVE_FOLDER_ID=your_gdrive_folder_id_here

# Google Drive Authentication
# Use OAuth2 (recommended for personal accounts) or Service Account
GDRIVE_USE_OAUTH2=true

# For OAuth2 (personal Google accounts):
# Path to credentials.json downloaded from Google Cloud Console (OAuth2 Client ID)
# See docs/OAUTH2_SETUP.md for detailed instructions
GDRIVE_CREDENTIALS_PATH=/app/credentials/credentials.json
GDRIVE_TOKEN_PATH=/app/credentials/token.pickle

# For Service Account (Google Workspace only - NOT recommended for personal accounts):
# Uncomment the following lines and comment out OAuth2 settings above
# GDRIVE_USE_OAUTH2=false
# GDRIVE_CREDENTIALS_PATH=/app/credentials/service_account.json

# Sync Configuration
SYNC_INTERVAL_SECONDS=300
LOG_LEVEL=INFO

# Execution Mode
# RUN_ONCE: Run sync once and exit (useful for cron mode)
#   true  = Execute sync once and exit
#   false = Run continuous loop with SYNC_INTERVAL_SECONDS - Default
RUN_ONCE=false

# Cron Schedule (only used with Dockerfile.cron and docker-compose profile 'cron')
# Format: minute hour day month weekday
# Examples:
#   */30 * * * * = Every 30 minutes (default)
#   0 */2 * * *  = Every 2 hours
#   0 0 * * *    = Once a day at midnight
#   0 */6 * * *  = Every 6 hours
CRON_SCHEDULE=*/30 * * * *

# Path Handling
# PRESERVE_STRUCTURE: How to handle S3 directory structures in Google Drive
#   true  = Recreate folder structure (dir1/dir2/file.txt creates folders dir1/dir2/) - Default
#   false = Flatten to root folder with normalized names (dir1/dir2/file.txt -> dir1_dir2_file.txt)
PRESERVE_STRUCTURE=true
